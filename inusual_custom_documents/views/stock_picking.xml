<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<!-- campo comentarios en vista formulario -->
		<record model="ir.ui.view" id="stock_picking_form_view">
			<field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='note']" position="after">
					<field name="comments" placeholder="Add comments..." class="oe_inline"/>
				</xpath>
			</field>
		</record>
				
		<!-- campo comentarios en informe pdf --> <!-- NON VAI-->
		<template id="report_picking_inherit" inherit_id="stock.report_picking">
			<xpath expr="//div[@class='page']" position="inside">
				<p t-if="o.comments" class="text-justify">
					<strong>Comments: </strong><br/>
					<span t-field="o.comments"/>	
				</p>
			</xpath>
		</template>
	</data>
</openerp>
