<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="project_mrp_procurement_shortcut_form_view">
        <field name="name">project.shortcuts.mrp.procurement.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
             <xpath expr="//div[@name='button_box']" position="inside">
                 <button name="%(mrp.mrp_production_action)d"
                        icon="fa-tasks"
                        class="oe_inline oe_stat_button"
                        type="action" groups="mrp.group_mrp_user, mrp.group_mrp_manager"
                        context="{'default_project_id': active_id,'search_default_project_id': [active_id]}">
                    <field name="production_count"
                           widget="statinfo"
                           string="Productions"
                    />
                </button>
            </xpath>
        </field>
    </record>

</odoo>
